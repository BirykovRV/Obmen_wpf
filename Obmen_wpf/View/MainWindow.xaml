<Window x:Class="Obmen_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Obmen_wpf"
        xmlns:viewmodel="clr-namespace:Obmen_wpf.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="150" 
        Width="300">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBlock
            FontSize="30"
            Text="{Binding Count}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <Button Command="{Binding ClickAdd}">Выполнить обмен</Button>
        <Button Command="{Binding Reset}">Сбросить</Button>
    </StackPanel>
        
    
</Window>
